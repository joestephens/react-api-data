{
  "name": "react-api-data",
  "version": "0.9.0",
  "description": "Fetch and normalize data from api",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "build": "npm run build:clean && npm run build:lib && npm run build:flow",
    "build:clean": "rimraf lib/",
    "build:lib": "tsc",
    "build:flow": "flow example && flow-copy-source flow lib",
    "build:docs": "documentation build lib/index.js -f md > api.md",
    "precommit": "tslint --project .",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oberonamsterdam/react-api-data.git"
  },
  "keywords": [
    "redux",
    "json",
    "fetch",
    "normalize",
    "typeScript support"
  ],
  "author": "Richard van Willegen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oberonamsterdam/react-api-data/issues"
  },
  "homepage": "https://github.com/oberonamsterdam/react-api-data#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.9.2",
    "@types/react-redux": "^6.0.9",
    "@types/shallowequal": "^0.2.3",
    "flow-bin": "^0.87.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^1.0.1",
    "jest": "^23.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.10.0",
    "tslint-config-oberon": "^1.0.4",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/redux-mock-store": "^1.0.0",
    "hoist-non-react-statics": "^2.3.1",
    "normalizr": "^3.2.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-redux": "^5.0.0",
    "redux-mock-store": "^1.5.3",
    "shallowequal": "^1.0.2"
  },
  "PeerDependencies": {
    "normalizr": "^3.0.0",
    "redux-thunk": "^2.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
